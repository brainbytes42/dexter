<BorderPane fx:id="rootPane" prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.panbytes.dexter.appfx.InspectionView">
  <bottom>
    <ButtonBar fx:id="mainButtons" BorderPane.alignment="CENTER">
      <buttons>
        <MenuButton fx:id="labelAsMenuButton" mnemonicParsing="false" text="Label as..." ButtonBar.buttonData="OK_DONE">
          <items>
            <MenuItem mnemonicParsing="false" text="&lt;Label A&gt;" />
            <MenuItem mnemonicParsing="false" text="&lt;Label B&gt;" />
            <MenuItem mnemonicParsing="false" text="&lt;Label ...&gt;" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <CustomMenuItem fx:id="enterNewLabelCustomMenuItem" hideOnClick="false" mnemonicParsing="false" text="New Label">
              <content>
                <BorderPane>
                  <right>
                    <Button fx:id="enterNewLabelCustomMenuItemOkButton" mnemonicParsing="false" text="OK" BorderPane.alignment="CENTER" />
                  </right>
                  <center>
                    <TextField fx:id="enterNewLabelCustomMenuItemTextField" promptText="Enter new Label" BorderPane.alignment="CENTER">
                      <BorderPane.margin>
                        <Insets right="5.0" />
                      </BorderPane.margin>
                    </TextField>
                  </center>
                  <opaqueInsets>
                    <Insets />
                  </opaqueInsets>
                </BorderPane>
              </content>
            </CustomMenuItem>
          </items>
        </MenuButton>
        <SegmentedButton ButtonBar.buttonData="OK_DONE" ButtonBar.buttonUniformSize="false">
          <buttons>
            <ToggleButton fx:id="confirmLabelButton" mnemonicParsing="false" text="Confirm current Label"  />
            <ToggleButton fx:id="useSuggestedLabelButton" mnemonicParsing="false" text="Use suggested Label" />
            <ToggleButton fx:id="rejectEntityButton" mnemonicParsing="false" text="Reject Entity" />
          </buttons>
        </SegmentedButton>
        <Button fx:id="closeInspectionButton" cancelButton="true" mnemonicParsing="false" text="Close" ButtonBar.buttonData="CANCEL_CLOSE" />
      </buttons>
      <BorderPane.margin>
        <Insets top="5.0" />
      </BorderPane.margin>
    </ButtonBar>
  </bottom>
  <right>
    <TitledPane collapsible="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="General" BorderPane.alignment="CENTER">
      <BorderPane.margin>
        <Insets left="5.0" />
      </BorderPane.margin>
      <content>
        <GridPane>
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" />
          </columnConstraints>
          <rowConstraints>
            <RowConstraints minHeight="25.0" />
            <RowConstraints minHeight="60.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="25.0" />
            <RowConstraints minHeight="25.0" />
            <RowConstraints minHeight="25.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="25.0" />
            <RowConstraints maxHeight="300" minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
          </rowConstraints>
          <children>
            <Label text="Name:" />
            <Label text="Description:" GridPane.rowIndex="1" />
            <Label text="Classification:" GridPane.rowIndex="2" />
            <TextField fx:id="entityNameTextField" editable="false" GridPane.columnIndex="1" />
            <TextArea fx:id="entityDescriptionTextArea" editable="false" prefHeight="100.0" prefWidth="200.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="entityClassificationTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <ScrollPane fitToWidth="true" GridPane.columnSpan="2147483647" GridPane.rowIndex="6" GridPane.rowSpan="2147483647">
              <content>
                <StackedBarChart fx:id="probabilityChart" categoryGap="5.0" legendVisible="false" prefHeight="150.0" prefWidth="150.0" titleSide="BOTTOM">
                  <xAxis>
                    <NumberAxis autoRanging="false" label="(avg.) Probability (one color per run)" minorTickCount="4" side="BOTTOM" tickUnit="0.2" upperBound="1.0">
                      <tickLabelFormatter><PercentageStringConverter /></tickLabelFormatter>
                    </NumberAxis>
                  </xAxis>
                  <yAxis>
                    <CategoryAxis side="LEFT" />
                  </yAxis>
                </StackedBarChart>
              </content>
            </ScrollPane>
            <Label text="Classification Probabilities:" GridPane.columnSpan="2147483647" GridPane.rowIndex="5" />
            <Label layoutX="20.0" layoutY="235.0" text="Uncertainty:" GridPane.rowIndex="3" />
            <TextField fx:id="uncertaintyTextField" editable="false" layoutX="120.0" layoutY="231.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
          </children>
        </GridPane>
      </content>
    </TitledPane>
  </right>
  <center>
    <TitledPane fx:id="domainInspectionDisplayContainer" collapsible="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Domain" BorderPane.alignment="CENTER">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
      </content>
      <BorderPane.margin>
        <Insets />
      </BorderPane.margin>
    </TitledPane>
  </center>
  <opaqueInsets>
    <Insets />
  </opaqueInsets>
